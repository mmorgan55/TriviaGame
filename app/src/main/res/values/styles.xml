<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="TitleStyle" parent="AppTheme">
    <item name="android:textSize">45sp</item>
    <item name="android:textColor">#1100ff</item>
  </style>

  <style name="CategoryName" parent="AppTheme">
    <item name="android:textSize">35sp</item>
    <item name="android:textColor">#000055</item>
  </style>

  <style name="TallyStyle" parent="AppTheme">
    <item name="android:textSize">25sp</item>
    <item name="android:textStyle">bold|italic</item>
  </style>

  <style name="CorrectTallyStyle" parent="TallyStyle">
    <item name="android:textColor">#FF00FF00</item>
  </style>

  <style name="IncorrectTallyStyle" parent="TallyStyle">
    <item name="android:textColor">#FFFF0000</item>
  </style>

  <style name="LivesStyle" parent="TallyStyle">
    <item name="android:textColor">#FF0077FF</item>
  </style>

  <style name="QuestionTextStyle" parent="AppTheme">
    <item name="android:textSize">25sp</item>
    <item name="android:textStyle">bold</item>
  </style>
  
  <style name="AnswerTextStyle" parent="AppTheme">
    <item name="android:textStyle">bold</item>
  </style>


</resources>
